<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/mobile_navigation"
            app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.medicareassabah.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.medicareassabah.ui.dashboard.DashboardFragment"
        android:label="Health News"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.medicareassabah.ui.notifications.NotificationsFragment"
        android:label="Covid Status"
        tools:layout="@layout/fragment_notifications" />
    <fragment
        android:id="@+id/navigation_chat"
        android:name="com.example.medicareassabah.ui.ChatFragment"
        android:label="Chat"
        tools:layout="@layout/fragment_chat" />

