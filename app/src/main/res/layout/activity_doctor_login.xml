<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context=".PatientLoginActivity"
              android:background="@color/white">

  <TextView
      android:id="@+id/tv"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="80dp"
      android:text="Sign In"
      android:layout_marginLeft="30dp"
      android:textColor="@color/black"
      android:fontFamily="sans-serif"
      android:textSize="30sp" />
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:layout_marginTop="100dp"
      android:layout_marginHorizontal="30dp"
      >


    <!--    <LinearLayout-->
    <!--        android:id="@+id/ll3"-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        android:layout_below="@+id/tv"-->
    <!--        android:layout_marginHorizontal="30dp"-->
    <!--        android:orientation="vertical">-->

    <!--      <Spinner-->
    <!--          android:id="@+id/spins"-->
    <!--          android:layout_width="match_parent"-->
    <!--          android:layout_height="51dp"-->
    <!--          android:background="@drawable/stroke"-->
    <!--          android:gravity="start"-->
    <!--          />-->

  <EditText
      android:id="@+id/etDusername"
      android:layout_width="match_parent"
      android:layout_height="51dp"
      android:drawableStart="@drawable/ic_baseline_person_24"
      android:hint="Enter username"
      android:drawablePadding="10dp"
      android:background="@drawable/stroke"
      android:textColor="@color/blacktransparent2"
      android:textColorHint="@color/blacktransparent2"
      />





    <EditText
        android:id="@+id/etDpassword"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/stroke"
        android:drawableStart="@drawable/ic_lock_24"
        android:hint="Enter password"
        android:paddingLeft="10dp"
        android:inputType="textPassword"
        android:textColor="@color/blacktransparent2"
        android:textColorHint="@color/blacktransparent2"
       />


    <Button
        android:id="@+id/btnDlogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Login"
        android:background="@color/main"
        android:textColor="@color/colorWhite" />
    <pl.droidsonroids.gif.GifImageView
        android:scaleType="centerCrop"
        android:src="@drawable/ggg"
        android:layout_width="150dp"
        android:layout_gravity="center"
        android:visibility="gone"
        android:id="@+id/gii"
        android:layout_height="150dp" />

  </LinearLayout>
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="15dp"
      android:layout_marginLeft="30dp"
      android:orientation="horizontal">
    <TextView
        android:id="@+id/tvpregister"
        android:layout_width="122dp"
        android:layout_height="32dp"
        android:text="Not a member?"
        android:textColor="@color/black"
        android:textSize="15sp" />


    <TextView
        android:id="@+id/tvDregister"
        android:layout_width="99dp"
        android:layout_height="match_parent"
        android:text="Join Now"
        android:textColor="@color/black"
        android:textSize="15sp" />

  </LinearLayout>




</LinearLayout>
