<!--            android:text="Remove"-->
<!--            android:layout_marginTop="10dp"-->
<!--            android:background="@color/bluee"-->
<!--            android:textColor="@color/white"/>-->
    </LinearLayout>


</androidx.cardview.widget.CardView>