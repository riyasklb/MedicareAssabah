<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".Emails">



    <ImageView
        android:layout_width="match_parent"
        android:layout_height="222dp"
        android:src="@drawable/sendmail"
        android:contentDescription="TODO" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="10dp"
        >
        <EditText
            android:id="@+id/to"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:padding="10dp"
            android:hint="To"
            android:background="@drawable/stroke"
            android:textColorHint="@color/bluee"
            android:textColor="@color/bluee"/>

        <EditText
            android:id="@+id/users"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/stroke"
            android:padding="10dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:editable="false"
            android:hint="Username"
            android:textColorHint="@color/bluee"
            android:textColor="@color/bluee"/>

        <EditText
            android:id="@+id/sub"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/stroke"
            android:padding="10dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:hint="Subject"
            android:textColorHint="@color/bluee"
            android:textColor="@color/bluee"/>
        <EditText
            android:id="@+id/nextdate"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/stroke"
            android:padding="10dp"
            android:inputType="date"
            android:ems="10"
            android:hint="Next date"
            android:textColorHint="@color/bluee"
            android:textColor="@color/bluee"/>
        <EditText
            android:id="@+id/nexttime"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/stroke"
            android:padding="10dp"
            android:inputType="time"
            android:ems="10"
            android:hint="Next time"
            android:textColorHint="@color/bluee"
            android:textColor="@color/bluee"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:id="@+id/emails"
            android:background="@color/bluee"
            android:textColor="@color/white"
            android:text="Send"
            />

    </LinearLayout>

  </LinearLayout>