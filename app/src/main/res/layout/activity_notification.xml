<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Notification.NotificationActivity" >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100dp"
        android:layout_margin="15dp"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/doctorn"
                android:layout_width="247dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:hint="Enter doctor name"
                android:paddingHorizontal="15dp" />
            <EditText
                android:id="@+id/doctorhos"
                android:layout_width="247dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:hint="Enter Hospital name"
                android:paddingHorizontal="15dp" />

            <DatePicker
                android:id="@+id/pickerdate"
                android:layout_width="match_parent"
                android:layout_height="394dp"
                android:layout_marginTop="15dp" />

            <TimePicker
                android:id="@+id/pickertime"
                android:layout_width="346dp"
                android:layout_height="342dp"
                android:layout_marginTop="15dp" />

            <Button
                android:id="@+id/setalarm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:layout_marginTop="15dp"
                android:text="Set Remainder" />

            <TextView
                android:id="@+id/info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlack"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>

